<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
        </Border>
    </Design.PreviewWith>

    <Style Selector="TextBox.SearchBox">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="CornerRadius" Value="25"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="Margin" Value="0,10,0,0"/>
    </Style>

    <Style Selector="Button.BoutonRecherche">
        <Setter Property="Background" Value="#059669"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="CornerRadius" Value="25"/>
        <Setter Property="Padding" Value="15,8"/>
    </Style>

    <Style Selector="Button">
        <Setter Property="Background" Value="#059669"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="8,5"/>
    </Style>

    <Style Selector="Border.TableRow">
        <Setter Property="BorderBrush" Value="#EEEEEE"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Padding" Value="0,8"/>
    </Style>

    <Style Selector="Grid.TableHeader">
        <Setter Property="Background" Value="#EEEEEE"/>
    </Style>

    <Style Selector="TextBox.PasswordInput">
        <Setter Property="FontFamily" Value="JetBrains Mono,Consolas,Monaco,Menlo,Courier New,monospace"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="LetterSpacing" Value="1"/>
    </Style>

    <Style Selector="TextBlock.PasswordDisplay">
        <Setter Property="FontFamily" Value="JetBrains Mono,Consolas,Monaco,Menlo,Courier New,monospace"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="LetterSpacing" Value="1"/>
    </Style>

    <!-- Styles pour l'icône utilisateur -->
    <Style Selector="Button#UserMenuButton">
        <Setter Property="Background" Value="#059669"/>
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="CornerRadius" Value="27.5"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <Style Selector="Button#UserMenuButton:pointerover">
        <Setter Property="Background" Value="#34D399"/>
    </Style>

    <Style Selector="Button#UserMenuButton:pressed">
        <Setter Property="Background" Value="#047857"/>
    </Style>

    <!-- Styles pour les MenuItems du menu utilisateur -->
    <Style Selector="MenuItem.user-info">
        <Setter Property="Foreground" Value="#2c3e50"/>
        <Setter Property="FontWeight" Value="Medium"/>
    </Style>

    <Style Selector="MenuItem.user-email">
        <Setter Property="Foreground" Value="#7f8c8d"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <Style Selector="MenuItem.logout-button">
        <Setter Property="Foreground" Value="#e74c3c"/>
        <Setter Property="FontWeight" Value="Medium"/>
    </Style>

    <Style Selector="MenuItem.logout-button:pointerover">
        <Setter Property="Background" Value="#ffebee"/>
        <Setter Property="Foreground" Value="#c62828"/>
    </Style>

    <!-- Styles supplémentaires pour l'harmonisation -->
    <Style Selector="Window">
        <Setter Property="Background" Value="#f8f9fa"/>
    </Style>

    <Style Selector="Button:pointerover">
        <Setter Property="Background" Value="#34D399"/>
    </Style>

    <Style Selector="Button:pressed">
        <Setter Property="Background" Value="#047857"/>
    </Style>

    <Style Selector="MenuItem:disabled">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style Selector="MenuItem:disabled:pointerover">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style Selector="Separator">
        <Setter Property="Background" Value="#e9ecef"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="8,4"/>
    </Style>

    <!-- Styles pour la page de login -->
    <Style Selector="Window.login-window">
        <Setter Property="Background" Value="#f5f5f5"/>
    </Style>

    <Style Selector="Border.login-container">
        <Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="30"/>
        <Setter Property="BoxShadow" Value="0 2 10 #33000000"/>
        <Setter Property="Opacity" Value="0.95"/>
    </Style>

    <Style Selector="Border.login-container:pointerover">
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="BoxShadow" Value="0 4 20 #44000000"/>
    </Style>

    <Style Selector="TextBlock.login-title">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#2c3e50"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style Selector="TextBlock.login-subtitle">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="#7f8c8d"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style Selector="TextBlock.login-logo">
        <Setter Property="FontSize" Value="48"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <Style Selector="TextBlock.field-label">
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="#2c3e50"/>
    </Style>

    <Style Selector="TextBox.login-input">
        <Setter Property="Padding" Value="12"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#bdc3c7"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="Background" Value="White"/>
    </Style>

    <Style Selector="TextBox.login-input:focus">
        <Setter Property="BorderBrush" Value="#059669"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <Style Selector="Button.login-primary">
        <Setter Property="Background" Value="#059669"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Padding" Value="0,12"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

    <Style Selector="Button.login-primary:pointerover">
        <Setter Property="Background" Value="#34D399"/>
    </Style>

    <Style Selector="Button.login-primary:pressed">
        <Setter Property="Background" Value="#047857"/>
    </Style>

    <Style Selector="Button.login-primary:disabled">
        <Setter Property="Background" Value="#bdc3c7"/>
        <Setter Property="Foreground" Value="#7f8c8d"/>
    </Style>

    <Style Selector="Button.login-secondary">
        <Setter Property="Background" Value="#059669"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Padding" Value="0,12"/>
        <Setter Property="CornerRadius" Value="5"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

    <Style Selector="Button.login-secondary:pointerover">
        <Setter Property="Background" Value="#34D399"/>
    </Style>

    <Style Selector="Button.login-secondary:pressed">
        <Setter Property="Background" Value="#047857"/>
    </Style>

    <Style Selector="Button.login-secondary:disabled">
        <Setter Property="Background" Value="#bdc3c7"/>
        <Setter Property="Foreground" Value="#7f8c8d"/>
    </Style>

    <Style Selector="Button.login-switch">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#059669"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Padding" Value="10,5"/>
    </Style>

    <Style Selector="Button.login-switch:pointerover">
        <Setter Property="Foreground" Value="#34D399"/>
    </Style>

    <Style Selector="TextBlock.error-message">
        <Setter Property="Foreground" Value="#e74c3c"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>
</Styles>
