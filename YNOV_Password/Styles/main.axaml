<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
        </Border>
    </Design.PreviewWith>

    <!-- Styles généraux avec animations -->
    <Style Selector="TextBox.SearchBox">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="CornerRadius" Value="25"/>
        <Setter Property="Padding" Value="15,12"/>
        <Setter Property="Margin" Value="0,10,0,0"/>
        <Setter Property="Width" Value="200"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="TextBox.SearchBox:focus">
        <Setter Property="BorderBrush" Value="#059669"/>
        <Setter Property="RenderTransform" Value="scale(1.02)"/>
    </Style>

    <Style Selector="Button.BoutonRecherche">
        <Setter Property="Background" Value="#059669"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="CornerRadius" Value="25"/>
        <Setter Property="Padding" Value="20,10"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button">
        <Setter Property="Background" Value="#059669"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.15"/>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Border.TableRow">
        <Setter Property="BorderBrush" Value="#F1F5F9"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Padding" Value="0,16"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Cursor" Value="Arrow"/>
    </Style>

    <Style Selector="Grid.TableHeader">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#F8FAFC" Offset="0"/>
                    <GradientStop Color="#F1F5F9" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <Style Selector="TextBox.PasswordInput">
        <Setter Property="FontFamily" Value="JetBrains Mono,Consolas,Monaco,Menlo,Courier New,monospace"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="LetterSpacing" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="BorderBrush" Value="#E2E8F0"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="TextBox.PasswordInput:focus">
        <Setter Property="BorderBrush" Value="#059669"/>
    </Style>

    <Style Selector="TextBlock.PasswordDisplay">
        <Setter Property="FontFamily" Value="JetBrains Mono,Consolas,Monaco,Menlo,Courier New,monospace"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="LetterSpacing" Value="1"/>
        <Setter Property="Opacity" Value="0.8"/>
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <!-- Styles pour l'icône utilisateur avec animations -->
    <Style Selector="Button#UserMenuButton">
        <Setter Property="Background" Value="#059669"/>
        <Setter Property="BorderBrush" Value="White"/>
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="CornerRadius" Value="27.5"/>
        <Setter Property="Width" Value="55"/>
        <Setter Property="Height" Value="55"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="Margin" Value="0,0,20,20"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15"/>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button#UserMenuButton:pointerover">
        <Setter Property="Background" Value="#34D399"/>
        <Setter Property="RenderTransform" Value="scale(1.03)"/>
    </Style>

    <Style Selector="Button#UserMenuButton:pressed">
        <Setter Property="Background" Value="#047857"/>
        <Setter Property="RenderTransform" Value="scale(0.97)"/>
    </Style>

    <!-- Style pour le contenu du bouton utilisateur -->
    <Style Selector="TextBlock.UserInitial">
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Styles pour les MenuItems du menu utilisateur -->
    <Style Selector="MenuItem.user-info">
        <Setter Property="Foreground" Value="#2c3e50"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="MenuItem.user-email">
        <Setter Property="Foreground" Value="#64748B"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="12,6"/>
    </Style>

    <Style Selector="MenuItem.logout-button">
        <Setter Property="Foreground" Value="#DC2626"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15"/>
                <BrushTransition Property="Foreground" Duration="0:0:0.15"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="MenuItem.logout-button:pointerover">
        <Setter Property="Background" Value="#FECACA"/>
        <Setter Property="Foreground" Value="#B91C1C"/>
    </Style>

    <Style Selector="MenuItem.import-library-button">
        <Setter Property="Foreground" Value="#059669"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="MenuItem.import-library-button:pointerover">
        <Setter Property="Background" Value="#DCFCE7"/>
    </Style>

    <!-- Styles pour l'harmonisation générale -->
    <Style Selector="Window">
        <Setter Property="Background" Value="#FAFBFC"/>
    </Style>

    <Style Selector="Button:pointerover">
        <Setter Property="Background" Value="#34D399"/>
        <Setter Property="RenderTransform" Value="translate(0, -1px)"/>
    </Style>

    <Style Selector="Button:pressed">
        <Setter Property="Background" Value="#047857"/>
        <Setter Property="RenderTransform" Value="scale(0.98)"/>
    </Style>

    <!-- Styles pour les menus contextuels -->
    <Style Selector="MenuItem">
        <Setter Property="FontFamily" Value="Segoe UI,Arial,sans-serif"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="MenuItem:pointerover">
        <Setter Property="Background" Value="#F1F5F9"/>
    </Style>

    <Style Selector="MenuItem:disabled">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Opacity" Value="0.6"/>
    </Style>

    <Style Selector="MenuItem:disabled:pointerover">
        <Setter Property="Background" Value="Transparent"/>
    </Style>

    <Style Selector="Separator">
        <Setter Property="Background" Value="#E2E8F0"/>
        <Setter Property="Height" Value="1"/>
        <Setter Property="Margin" Value="8,4"/>
    </Style>

    <!-- Styles pour les éléments interactifs du tableau -->
    <Style Selector="Button.TableActionButton">
        <Setter Property="Background" Value="#F8FAFC"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#E2E8F0"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Foreground" Value="#6B7280"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.1"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.1"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button.TableActionButton:pointerover">
        <Setter Property="Background" Value="#059669"/>
        <Setter Property="BorderBrush" Value="#059669"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <!-- Styles pour les TextBlocks avec animations -->
    <Style Selector="TextBlock.Title">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.3"/>
            </Transitions>
        </Setter>
    </Style>

    <!-- Amélioration des boutons avec icônes -->
    <Style Selector="Button.IconButton">
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="#059669"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="Margin" Value="0,0,12,0"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#E2E8F0"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.15"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.15"/>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"/>
            </Transitions>
        </Setter>
    </Style>

    <!-- Style spécifique pour le bouton d'aide -->
    <Style Selector="Button.IconButton#HelpButton">
        <Setter Property="Padding" Value="12,10"/>
    </Style>

    <Style Selector="Button.IconButton:pointerover">
        <Setter Property="Background" Value="#F0FDF4"/>
        <Setter Property="BorderBrush" Value="#059669"/>
        <Setter Property="RenderTransform" Value="translate(0, -1px)"/>
    </Style>

    <Style Selector="Button.IconButton:pressed">
        <Setter Property="RenderTransform" Value="scale(0.98)"/>
    </Style>

    <!-- Animations avancées et micro-interactions -->
    <Style Selector="Window">
        <Setter Property="Background" Value="#FAFBFC"/>
    </Style>

    <!-- Améliorations pour les TextBoxes avec focus animé -->
    <Style Selector="TextBox">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="BorderBrush" Value="#D1D5DB"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="TextBox:focus">
        <Setter Property="BorderBrush" Value="#059669"/>
        <Setter Property="RenderTransform" Value="scale(1.01)"/>
    </Style>

    <!-- Animation de survol pour les éléments de liste supprimée - déjà définie plus haut -->

    <!-- Amélioration des CheckBox et RadioButton -->
    <Style Selector="CheckBox">
        <Setter Property="Transitions">
            <Transitions>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.15"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="CheckBox:pointerover">
        <Setter Property="RenderTransform" Value="scale(1.05)"/>
    </Style>

    <Style Selector="RadioButton">
        <Setter Property="Transitions">
            <Transitions>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.15"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="RadioButton:pointerover">
        <Setter Property="RenderTransform" Value="scale(1.05)"/>
    </Style>

    <!-- Amélioration des sliders -->
    <Style Selector="Slider">
        <Setter Property="Transitions">
            <Transitions>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Slider:pointerover">
        <Setter Property="RenderTransform" Value="scale(1.02)"/>
    </Style>

    <!-- Animation de chargement subtile -->
    <Style Selector="ProgressBar">
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Value" Duration="0:0:0.3" Easing="CubicEaseOut"/>
            </Transitions>
        </Setter>
    </Style>

    <!-- Style pour les titres avec animation -->
    <Style Selector="TextBlock.AnimatedTitle">
        <Setter Property="Opacity" Value="1"/>
    </Style>

    <!-- Effet de brillance pour les cartes importantes -->
    <Style Selector="Border.HighlightCard">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="#F8FAFC" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="Transitions">
            <Transitions>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <!-- Style spécifique pour le bouton menu avec trois points -->
    <Style Selector="Button.MenuActionButton">
        <Setter Property="Background" Value="#F1F5F9"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#D1D5DB"/>
        <Setter Property="CornerRadius" Value="18"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="Foreground" Value="#374151"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Width" Value="36"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.1"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.1"/>
                <BrushTransition Property="Foreground" Duration="0:0:0.1"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button.MenuActionButton:pointerover">
        <Setter Property="Background" Value="#059669"/>
        <Setter Property="BorderBrush" Value="#059669"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style Selector="Button.MenuActionButton:pressed">
        <Setter Property="RenderTransform" Value="scale(0.98)"/>
    </Style>

    <!-- Styles pour les boutons de la fenêtre d'alerte de doublons -->
    <Style Selector="Button.PrimaryButton">
        <Setter Property="Background" Value="#DC2626"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.2"/>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button.PrimaryButton:pointerover">
        <Setter Property="Background" Value="#B91C1C"/>
        <Setter Property="RenderTransform" Value="scale(1.02)"/>
    </Style>

    <Style Selector="Button.PrimaryButton:pressed">
        <Setter Property="RenderTransform" Value="scale(0.98)"/>
    </Style>

    <Style Selector="Button.SecondaryButton">
        <Setter Property="Background" Value="#059669"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.2"/>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button.SecondaryButton:pointerover">
        <Setter Property="Background" Value="#047857"/>
        <Setter Property="RenderTransform" Value="scale(1.02)"/>
    </Style>

    <Style Selector="Button.SecondaryButton:pressed">
        <Setter Property="RenderTransform" Value="scale(0.98)"/>
    </Style>

    <Style Selector="Button.TertiaryButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#6B7280"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#D1D5DB"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.2"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button.TertiaryButton:pointerover">
        <Setter Property="Background" Value="#F9FAFB"/>
        <Setter Property="BorderBrush" Value="#9CA3AF"/>
        <Setter Property="RenderTransform" Value="scale(1.02)"/>
    </Style>

    <Style Selector="Button.TertiaryButton:pressed">
        <Setter Property="RenderTransform" Value="scale(0.98)"/>
    </Style>

    <!-- Style pour le bouton d'alerte de mots de passe dupliqués -->
    <Style Selector="Button.DuplicateAlertButton">
        <Setter Property="Background" Value="#FEF3C7"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#F59E0B"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.2"/>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button.DuplicateAlertButton:pointerover">
        <Setter Property="Background" Value="#FDE68A"/>
        <Setter Property="BorderBrush" Value="#D97706"/>
        <Setter Property="RenderTransform" Value="scale(1.1)"/>
    </Style>

    <Style Selector="Button.DuplicateAlertButton:pressed">
        <Setter Property="Background" Value="#F59E0B"/>
        <Setter Property="RenderTransform" Value="scale(0.95)"/>
    </Style>

    <!-- Styles pour les fenêtres principales -->
    <Style Selector="Window.MainWindow">
        <Setter Property="Width" Value="800"/>
        <Setter Property="Height" Value="450"/>
    </Style>

    <Style Selector="Window.AddPasswordWindow">
        <Setter Property="Width" Value="400"/>
        <Setter Property="Height" Value="420"/>
        <Setter Property="MinWidth" Value="350"/>
        <Setter Property="MinHeight" Value="350"/>
    </Style>

    <Style Selector="Window.DuplicatePasswordAlertWindow">
        <Setter Property="Width" Value="600"/>
        <Setter Property="Height" Value="400"/>
    </Style>

    <Style Selector="Window.LoginWindow">
        <Setter Property="Width" Value="500"/>
        <Setter Property="Height" Value="600"/>
    </Style>

    <Style Selector="Window.PasswordGeneratorWindow">
        <Setter Property="Width" Value="500"/>
        <Setter Property="Height" Value="700"/>
    </Style>

    <!-- Styles pour la fenêtre d'aide -->
    <Style Selector="Window.HelpWindow">
        <Setter Property="Width" Value="800"/>
        <Setter Property="Height" Value="650"/>
    </Style>

    <!-- Styles pour la barre de recherche de l'aide -->
    <Style Selector="Border.HelpSearchBar">
        <Setter Property="Padding" Value="15"/>
        <Setter Property="Background" Value="#F8F9FA"/>
        <Setter Property="BorderBrush" Value="#E9ECEF"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
    </Style>

    <Style Selector="TextBox.HelpSearchBox">
        <Setter Property="Width" Value="300"/>
    </Style>

    <Style Selector="TextBlock.SearchResultsText">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="Gray"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Margin" Value="10,0,0,0"/>
    </Style>

    <!-- Styles pour le contenu de l'aide -->
    <Style Selector="ScrollViewer.HelpContent">
        <Setter Property="Padding" Value="20"/>
        <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
    </Style>

    <Style Selector="StackPanel.HelpMainContent">
        <Setter Property="Spacing" Value="20"/>
    </Style>

    <!-- Styles pour les en-têtes de sections -->
    <Style Selector="Border.HeaderSection">
        <Setter Property="Padding" Value="30"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#34D399" Offset="0"/>
                    <GradientStop Color="#059669" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Styles pour les grilles de colonnes du tableau -->
    <Style Selector="Grid.TableColumns">
        <Setter Property="Margin" Value="10,5"/>
    </Style>

    <!-- Styles pour les TextBlock d'en-tête de tableau -->
    <Style Selector="TextBlock.TableHeader">
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin" Value="10,5"/>
    </Style>

    <!-- Styles pour les champs d'entrée avec label -->
    <Style Selector="TextBlock.FormLabel">
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="#374151"/>
        <Setter Property="Margin" Value="0,0,0,6"/>
    </Style>

    <Style Selector="TextBox.FormInput">
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="BorderBrush" Value="#D1D5DB"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="TextBox.FormInput:focus">
        <Setter Property="BorderBrush" Value="#059669"/>
    </Style>

    <!-- Styles pour les titres de pages -->
    <Style Selector="TextBlock.PageTitle">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#1F2937"/>
        <Setter Property="Margin" Value="0,0,0,24"/>
    </Style>

    <Style Selector="TextBlock.SectionTitle">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#1F2937"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- Styles pour les boutons d'annulation -->
    <Style Selector="Button.CancelButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#6B7280"/>
        <Setter Property="BorderBrush" Value="#D1D5DB"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="20,10"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.2"/>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>

    <Style Selector="Button.CancelButton:pointerover">
        <Setter Property="Background" Value="#F9FAFB"/>
        <Setter Property="BorderBrush" Value="#9CA3AF"/>
    </Style>

    <!-- Styles pour les textes de connexion -->
    <Style Selector="TextBlock.LoginTitle">
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="#1F2937"/>
    </Style>

    <Style Selector="TextBlock.LoginSubtitle">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="#6B7280"/>
        <Setter Property="FontWeight" Value="Medium"/>
    </Style>

    <!-- Styles pour les conteneurs de connexion -->
    <Style Selector="Border.LoginContainer">
        <Setter Property="Background" Value="#FAFBFC"/>
