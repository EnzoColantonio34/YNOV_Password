    <Style Selector="TextBlock.LibraryManagerTitle">
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#1F2937"/>
        <Setter Property="Margin" Value="0,0,0,32"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.5"/>
                <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.5"/>
            </Transitions>
        </Setter>
    </Style>

    <!-- Style pour les ItemsControl dans le gestionnaire -->
    <Style Selector="ItemsControl.LibraryItemsControl">
        <Setter Property="Margin" Value="0"/>
    </Style>

    <!-- Amélioration des messages d'état vides -->
    <Style Selector="TextBlock.EmptyLibraryMessage">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="#9CA3AF"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,40"/>
        <Setter Property="Opacity" Value="0.8"/>
    </Style>

    <!-- Style pour les icônes dans les boutons du gestionnaire -->
    <Style Selector="Button.RefreshButton > TextBlock">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Carte principale générique pour sections importantes (AddPassword style) -->
    <Style Selector="Border.Card">
        <Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Padding" Value="24"/>
        <Setter Property="BoxShadow" Value="0 2 12 0 #00000010"/>
        <Setter Property="Margin" Value="0,0,0,0"/>
    </Style>

    <!-- Style pour le conteneur principal AddPassword/WordLibraryManager -->
    <Style Selector="StackPanel.MainContainer">
        <Setter Property="Margin" Value="24"/>
        <Setter Property="Spacing" Value="20"/>
    </Style>

    <!-- Style pour la barre de statut -->
    <Style Selector="Border.StatusCard">
        <Setter Property="Background" Value="White"/>
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="BoxShadow" Value="0 2 12 0 #00000010"/>
        <Setter Property="Margin" Value="0,24,0,0"/>
    </Style>

    <!-- Style pour les items de bibliothèque -->
    <Style Selector="Border.LibraryListItem">
        <Setter Property="Background" Value="#F8FAFC"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
        <Setter Property="BoxShadow" Value="0 1 4 0 #00000008"/>
    </Style>
</Styles>
