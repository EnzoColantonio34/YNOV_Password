<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YNOV_Password.Views"
        xmlns:vm="clr-namespace:YNOV_Password.ViewModels"
        xmlns:models="clr-namespace:YNOV_Password.Models"
        xmlns:converters="clr-namespace:YNOV_Password.Converters"
        mc:Ignorable="d"
        x:Class="YNOV_Password.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
        Icon="/Assets/avalonia-logo.ico"
        Title="YNOV_Password"
        Width="800"
        Height="450">

    <Window.Resources>
        <converters:PasswordMaskConverter x:Key="PasswordMaskConverter"/>
        <converters:PasswordVisibilityConverter x:Key="PasswordVisibilityConverter"/>
        <converters:RemainingTimeConverter x:Key="RemainingTimeConverter"/>
        <converters:DuplicatePasswordConverter x:Key="DuplicatePasswordConverter"/>
    </Window.Resources>

    <Window.Styles>
        <StyleInclude Source="avares://YNOV_Password/Styles/main.axaml"/>
    </Window.Styles>

    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <StackPanel>

        <!-- En-tÃªte -->
        <Border Padding="30" Classes="HighlightCard">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#34D399" Offset="0"/>
                    <GradientStop Color="#059669" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <StackPanel>
                <!-- Titre et boutons -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="YNOV Password"
                               Classes="Title"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"/>

                    <Button Grid.Column="1"
                            Content="â“"
                            Classes="IconButton"
                            Click="HelpButton_Click"
                            Padding="12,10"
                            HorizontalAlignment="Right"
                            Margin="0,0,12,0"
                            ToolTip.Tip="Aide - Guide d'utilisation"
                            x:Name="HelpButton"/>

                    <Button Grid.Column="2"
                            Content="GÃ©nÃ©rer un mot de passe"
                            Classes="IconButton"
                            Click="GeneratePasswordButton_Click"
                            Padding="16,10"
                            HorizontalAlignment="Right"
                            Margin="0,0,12,0"
                            x:Name="GeneratePasswordButton"/>

                    <Button Grid.Column="3"
                            Content="Ajouter"
                            Classes="IconButton"
                            Click="AddButton_Click"
                            Padding="16,10"
                            HorizontalAlignment="Right"
                            x:Name="AddButton"/>
                </Grid>

                <!-- Barre de recherche -->
                <TextBox Classes="SearchBox"
                         Watermark="Rechercher..."
                         Width="200"
                         Text="{Binding SearchText}"
                         HorizontalAlignment="Left"
                         Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Tableau des mots de passe -->
        <Border Margin="20" CornerRadius="12" Classes="HighlightCard">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

            <!-- En-tÃªtes du tableau -->
            <Grid Grid.Row="0" Classes="TableHeader">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Site" FontWeight="Bold" Margin="10,5" />
                <TextBlock Grid.Column="1" Text="Nom d'utilisateur" FontWeight="Bold" Margin="10,5" />
                <TextBlock Grid.Column="2" Text="Mot de passe" FontWeight="Bold" Margin="10,5" />
                <TextBlock Grid.Column="3" Text="" FontWeight="Bold" Margin="5,5" HorizontalAlignment="Center" />
                <TextBlock Grid.Column="4" Text="URL" FontWeight="Bold" Margin="10,5" />
                <TextBlock Grid.Column="5" Text="Actions" FontWeight="Bold" Margin="10,5" HorizontalAlignment="Center" />
            </Grid>

            <!-- Message quand il n'y a pas de mots de passe -->
            <Border Grid.Row="1" IsVisible="{Binding HasNoPasswords}" Padding="20" Margin="0,40,0,20">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{Binding NoPasswordsMessageTitle}" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="#9CA3AF" 
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,8"/>
                    <TextBlock Text="{Binding NoPasswordsMessageSubtitle}" 
                               FontSize="12" 
                               FontWeight="Normal" 
                               Foreground="#9CA3AF" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Contenu du tableau -->
            <ItemsControl Grid.Row="1" ItemsSource="{Binding Passwords}" IsVisible="{Binding !HasNoPasswords}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Classes="TableRow">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="{Binding Site}" Margin="10,0" VerticalAlignment="Center" />
                                <TextBlock Grid.Column="1" Text="{Binding Username}" Margin="10,0" VerticalAlignment="Center" />
                                
                                <!-- Champ mot de passe cliquable -->
                                <Grid Grid.Column="2">
                                    <TextBlock Text="{Binding Password, Converter={StaticResource PasswordMaskConverter}}" 
                                               Classes="PasswordDisplay"
                                               Margin="10,0" 
                                               VerticalAlignment="Center"
                                               Background="Transparent"
                                               IsVisible="{Binding !IsPasswordVisible}"/>
                                    <TextBlock Text="{Binding Password}" 
                                               Classes="PasswordDisplay"
                                               Margin="10,0" 
                                               VerticalAlignment="Center"
                                               Background="Transparent"
                                               IsVisible="{Binding IsPasswordVisible}"/>
                                    <Button Background="Transparent" 
                                            BorderThickness="0" 
                                            Padding="10,0" 
                                            HorizontalAlignment="Stretch" 
                                            HorizontalContentAlignment="Left"
                                            VerticalAlignment="Stretch"
                                            Content=""
                                            Cursor="Hand"
                                            Classes="TableActionButton"
                                            PointerPressed="PasswordField_PointerPressed">
                                        <Button.Flyout>
                                            <MenuFlyout>
                                                <MenuItem Header="ðŸ‘ï¸ Afficher" 
                                                          Click="ShowPassword_Click"
                                                          Tag="{Binding}"/>
                                                <MenuItem Header="ðŸ–Šï¸ Modifier" 
                                                          Click="ModifyPassword_Click"
                                                          Tag="{Binding}"/>
                                            </MenuFlyout>
                                        </Button.Flyout>
                                    </Button>
                                </Grid>
                                
                                <!-- Timer et alerte de duplication -->
                                <StackPanel Grid.Column="3" 
                                           Orientation="Horizontal"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Spacing="8">
                                    
                                    <!-- Timer pour le temps restant -->
                                    <TextBlock Text="{Binding RemainingTime, Converter={StaticResource RemainingTimeConverter}}" 
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Foreground="#666666"
                                               MinWidth="30"
                                               TextAlignment="Center"
                                               IsVisible="{Binding IsPasswordVisible}"/>
                                    
                                    <!-- IcÃ´ne d'alerte pour les mots de passe dupliquÃ©s -->
                                    <Button Background="#FEF3C7" 
                                            BorderThickness="1" 
                                            BorderBrush="#F59E0B"
                                            Padding="3" 
                                            CornerRadius="4"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Content="âš ï¸"
                                            IsVisible="{Binding IsDuplicate}"
                                            Cursor="Hand"
                                            FontSize="12"
                                            MinWidth="24"
                                            MinHeight="24"
                                            Click="DuplicateAlert_Click"
                                            Tag="{Binding}"
                                            ToolTip.Tip="Ce mot de passe est rÃ©utilisÃ© - Cliquez pour plus d'options">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="#FDE68A"/>
                                                <Setter Property="BorderBrush" Value="#D97706"/>
                                            </Style>
                                        </Button.Styles>
                                    </Button>
                                </StackPanel>
                                
                                <!-- URL cliquable -->
                                <Button Grid.Column="4" 
                                        Background="Transparent" 
                                        BorderThickness="0" 
                                        Padding="10,0" 
                                        HorizontalAlignment="Stretch" 
                                        HorizontalContentAlignment="Left"
                                        VerticalAlignment="Stretch"
                                        Content="{Binding Url}"
                                        Cursor="Hand"
                                        Foreground="#0066CC"
                                        Classes="TableActionButton"
                                        Click="OpenUrl_Click"
                                        Tag="{Binding}">
                                    <Button.Styles>
                                        <Style Selector="Button:pointerover">
                                            <Setter Property="Foreground" Value="#0052A3"/>
                                        </Style>
                                    </Button.Styles>
                                </Button>
                                
                                <!-- Bouton menu dÃ©roulant -->
                                <Button Grid.Column="5" 
                                        Content="â‹¯" 
                                        HorizontalAlignment="Center" 
                                        Classes="MenuActionButton">
                                    <Button.Flyout>
                                        <MenuFlyout>
                                            <MenuItem Header="ðŸ“„ Copier MDP" 
                                                      Click="CopyPassword_Click"
                                                      Tag="{Binding}"/>
                                            <MenuItem Header="ðŸ‘¤ Copier l'utilisateur" 
                                                      Click="CopyUsername_Click"
                                                      Tag="{Binding}"/>
                                            <MenuItem Header="ðŸ”— Copier URL" 
                                                      Click="CopyUrl_Click"
                                                      Tag="{Binding}"/>
                                            <Separator/>
                                            <MenuItem Header="ðŸ—‘ï¸ Supprimer" 
                                                      Classes="logout-button"
                                                      Click="DeletePassword_Click"
                                                      Tag="{Binding}"/>
                                        </MenuFlyout>
                                    </Button.Flyout>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
        </Border>
    </StackPanel>
    </ScrollViewer>
    
    <!-- IcÃ´ne utilisateur avec menu de dÃ©connexion -->
    <Button Name="UserMenuButton"
            Width="55"
            Height="55"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="0,0,20,20"
            ToolTip.Tip="Menu utilisateur"
            Click="UserMenuButton_Click">
        <Button.Content>
            <TextBlock Text="{Binding UserInitial}" 
                       FontSize="22" 
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Button.Content>
        <Button.Flyout>
            <MenuFlyout Placement="TopEdgeAlignedRight">
                <MenuItem Header="{Binding CurrentUser.Username, StringFormat='ðŸ‘¤ {0}'}"
                          Classes="user-info"
                          IsEnabled="False"/>
                <MenuItem Header="{Binding CurrentUser.Email, StringFormat='ðŸ“§ {0}'}"
                          Classes="user-email"
                          IsEnabled="False"/>
                <Separator Background="#EEEEEE"/>
                <MenuItem Header="Importer une bibliothÃ¨que"
                          Classes="import-library-button"
                          Click="ImportLibraryMenuItem_Click"/>
                <MenuItem Header="Se dÃ©connecter"
                          Classes="logout-button"
                          Click="LogoutMenuItem_Click"/>
            </MenuFlyout>
        </Button.Flyout>
    </Button>
</Grid>
</Window>
