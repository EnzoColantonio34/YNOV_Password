<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YNOV_Password.Views"
        xmlns:vm="clr-namespace:YNOV_Password.ViewModels"
        xmlns:models="clr-namespace:YNOV_Password.Models"
        xmlns:converters="clr-namespace:YNOV_Password.Converters"
        mc:Ignorable="d"
        x:Class="YNOV_Password.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
        Icon="/Assets/avalonia-logo.ico"
        Title="YNOV_Password"
        Width="800"
        Height="450">

    <Window.Resources>
        <converters:PasswordMaskConverter x:Key="PasswordMaskConverter"/>
        <converters:PasswordVisibilityConverter x:Key="PasswordVisibilityConverter"/>
        <converters:RemainingTimeConverter x:Key="RemainingTimeConverter"/>
    </Window.Resources>

    <Window.Styles>
        <StyleInclude Source="avares://YNOV_Password/Styles/main.axaml"/>
    </Window.Styles>

    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <StackPanel>

        <!-- En-tête -->
        <Border Padding="30">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#34D399" Offset="0"/>
                    <GradientStop Color="#059669" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <StackPanel>
                <!-- Titre et boutons -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="YNOV Password"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"/>

                    <Button Grid.Column="1"
                            Content="Générer un mot de passe"
                            Click="GeneratePasswordButton_Click"
                            Padding="10,5"
                            Background="White"
                            Foreground="#059669"
                            CornerRadius="4"
                            HorizontalAlignment="Right"
                            Margin="0,0,10,0"
                            x:Name="GeneratePasswordButton"/>

                    <Button Grid.Column="2"
                            Content="Ajouter"
                            Click="AddButton_Click"
                            Padding="10,5"
                            Background="White"
                            Foreground="#059669"
                            CornerRadius="4"
                            HorizontalAlignment="Right"
                            x:Name="AddButton"/>
                </Grid>

                <!-- Barre de recherche -->
                <TextBox Classes="SearchBox"
                         Watermark="Rechercher..."
                         Width="200"
                         Text="{Binding SearchText}"
                         HorizontalAlignment="Left"
                         Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Tableau des mots de passe -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- En-têtes du tableau -->
            <Grid Grid.Row="0" Classes="TableHeader">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Site" FontWeight="Bold" Margin="10,5" />
                <TextBlock Grid.Column="1" Text="Nom d'utilisateur" FontWeight="Bold" Margin="10,5" />
                <TextBlock Grid.Column="2" Text="Mot de passe" FontWeight="Bold" Margin="10,5" />
                <TextBlock Grid.Column="3" Text="" FontWeight="Bold" Margin="5,5" HorizontalAlignment="Center" />
                <TextBlock Grid.Column="4" Text="URL" FontWeight="Bold" Margin="10,5" />
                <TextBlock Grid.Column="5" Text="Actions" FontWeight="Bold" Margin="10,5" HorizontalAlignment="Center" />
            </Grid>

            <!-- Contenu du tableau -->
            <ItemsControl Grid.Row="1" ItemsSource="{Binding Passwords}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Classes="TableRow">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="{Binding Site}" Margin="10,0" VerticalAlignment="Center" />
                                <TextBlock Grid.Column="1" Text="{Binding Username}" Margin="10,0" VerticalAlignment="Center" />
                                
                                <!-- Champ mot de passe cliquable -->
                                <Grid Grid.Column="2">
                                    <TextBlock Text="{Binding Password, Converter={StaticResource PasswordMaskConverter}}" 
                                               Classes="PasswordDisplay"
                                               Margin="10,0" 
                                               VerticalAlignment="Center"
                                               Background="Transparent"
                                               IsVisible="{Binding !IsPasswordVisible}"/>
                                    <TextBlock Text="{Binding Password}" 
                                               Classes="PasswordDisplay"
                                               Margin="10,0" 
                                               VerticalAlignment="Center"
                                               Background="Transparent"
                                               IsVisible="{Binding IsPasswordVisible}"/>
                                    <Button Background="Transparent" 
                                            BorderThickness="0" 
                                            Padding="10,0" 
                                            HorizontalAlignment="Stretch" 
                                            HorizontalContentAlignment="Left"
                                            VerticalAlignment="Stretch"
                                            Content=""
                                            Cursor="Hand"
                                            PointerPressed="PasswordField_PointerPressed">
                                        <Button.Styles>
                                            <Style Selector="Button:pointerover">
                                                <Setter Property="Background" Value="#F0F0F0"/>
                                            </Style>
                                        </Button.Styles>
                                        <Button.Flyout>
                                            <MenuFlyout>
                                                <MenuItem Header="👁️ Afficher" 
                                                          Click="ShowPassword_Click"
                                                          Tag="{Binding}"/>
                                            </MenuFlyout>
                                        </Button.Flyout>
                                    </Button>
                                </Grid>
                                
                                <!-- Timer pour le temps restant -->
                                <TextBlock Grid.Column="3" 
                                           Text="{Binding RemainingTime, Converter={StaticResource RemainingTimeConverter}}" 
                                           Margin="5,0" 
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           FontSize="12"
                                           Foreground="#666666"
                                           IsVisible="{Binding IsPasswordVisible}"/>
                                
                                <!-- URL cliquable -->
                                <Button Grid.Column="4" 
                                        Background="Transparent" 
                                        BorderThickness="0" 
                                        Padding="10,0" 
                                        HorizontalAlignment="Stretch" 
                                        HorizontalContentAlignment="Left"
                                        VerticalAlignment="Stretch"
                                        Content="{Binding Url}"
                                        Cursor="Hand"
                                        Foreground="#0066CC"
                                        Click="OpenUrl_Click"
                                        Tag="{Binding}">
                                    <Button.Styles>
                                        <Style Selector="Button:pointerover">
                                            <Setter Property="Background" Value="#F0F8FF"/>
                                            <Setter Property="Foreground" Value="#0052A3"/>
                                        </Style>
                                    </Button.Styles>
                                </Button>
                                
                                <!-- Bouton menu déroulant -->
                                <Button Grid.Column="5" Content="⋯" HorizontalAlignment="Center" Width="30" Height="30">
                                    <Button.Flyout>
                                        <MenuFlyout>
                                            <MenuItem Header="Copier MDP" 
                                                      Click="CopyPassword_Click"
                                                      Tag="{Binding}"/>
                                            <MenuItem Header="Copier l'utilisateur" 
                                                      Click="CopyUsername_Click"
                                                      Tag="{Binding}"/>
                                            <MenuItem Header="Copier URL" 
                                                      Click="CopyUrl_Click"
                                                      Tag="{Binding}"/>
                                            <Separator/>
                                            <MenuItem Header="Supprimer" 
                                                      Click="DeletePassword_Click"
                                                      Tag="{Binding}"/>
                                        </MenuFlyout>
                                    </Button.Flyout>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </StackPanel>
    </ScrollViewer>
    
    <!-- Icône utilisateur avec menu de déconnexion -->
    <Button Name="UserMenuButton"
            Width="55"
            Height="55"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Margin="0,0,20,20"
            ToolTip.Tip="Menu utilisateur"
            Click="UserMenuButton_Click">
        <Button.Content>
            <TextBlock Text="{Binding UserInitial}" 
                       FontSize="22" 
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Button.Content>
        <Button.Flyout>
            <MenuFlyout Placement="TopEdgeAlignedRight">
                <MenuItem Header="{Binding CurrentUser.Username, StringFormat='👤 {0}'}"
                          Classes="user-info"
                          IsEnabled="False"/>
                <MenuItem Header="{Binding CurrentUser.Email, StringFormat='📧 {0}'}"
                          Classes="user-email"
                          IsEnabled="False"/>
                <Separator Background="#EEEEEE"/>
                <MenuItem Header="🚪 Se déconnecter"
                          Classes="logout-button"
                          Click="LogoutMenuItem_Click"/>
            </MenuFlyout>
        </Button.Flyout>
    </Button>
</Grid>
</Window>
