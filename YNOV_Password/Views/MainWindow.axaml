<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YNOV_Password.Views"
        xmlns:vm="clr-namespace:YNOV_Password.ViewModels"
        xmlns:models="clr-namespace:YNOV_Password.Models"
        mc:Ignorable="d"
        x:Class="YNOV_Password.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
        Icon="/Assets/avalonia-logo.ico"
        Title="YNOV_Password"
        Width="800"
        Height="450">

    <Window.Styles>
        <StyleInclude Source="avares://YNOV_Password/Styles/main.axaml"/>
    </Window.Styles>

    <StackPanel>

        <!-- En-tête -->
        <Border Padding="30">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#34D399" Offset="0"/>
                    <GradientStop Color="#059669" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <StackPanel>
                <!-- Titre et bouton -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="YNOV Password"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"/>

                    <Button Grid.Column="1"
                            Content="Ajouter"
                            Click="AddButton_Click"
                            Padding="10,5"
                            Background="White"
                            Foreground="#059669"
                            CornerRadius="4"
                            HorizontalAlignment="Right"
                            x:Name="AddButton"/>
                </Grid>

                <!-- Barre de recherche -->
                <TextBox Classes="SearchBox"
                         Watermark="Rechercher..."
                         Width="200"
                         Text="{Binding SearchText}"
                         HorizontalAlignment="Left"
                         Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Tableau des mots de passe -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- En-têtes du tableau -->
            <Grid Grid.Row="0" Classes="TableHeader">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Site" FontWeight="Bold" Margin="10,5" />
                <TextBlock Grid.Column="1" Text="Nom d'utilisateur" FontWeight="Bold" Margin="10,5" />
                <TextBlock Grid.Column="2" Text="Mot de passe" FontWeight="Bold" Margin="10,5" />
                <TextBlock Grid.Column="3" Text="URL" FontWeight="Bold" Margin="10,5" />
                <TextBlock Grid.Column="4" Text="Actions" FontWeight="Bold" Margin="10,5" HorizontalAlignment="Center" />
            </Grid>

            <!-- Contenu du tableau -->
            <ItemsControl Grid.Row="1" ItemsSource="{Binding Passwords}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Classes="TableRow">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="{Binding Site}" Margin="10,0" VerticalAlignment="Center" />
                                <TextBlock Grid.Column="1" Text="{Binding Username}" Margin="10,0" VerticalAlignment="Center" />
                                <TextBlock Grid.Column="2" Text="{Binding Password, Converter={StaticResource PasswordMaskConverter}}" Margin="10,0" VerticalAlignment="Center" />
                                <TextBlock Grid.Column="3" Text="{Binding Url}" Margin="10,0" VerticalAlignment="Center" />
                                
                                <!-- Bouton menu déroulant -->
                                <Button Grid.Column="4" Content="⋯" HorizontalAlignment="Center" Width="30" Height="30">
                                    <Button.Flyout>
                                        <MenuFlyout>
                                            <MenuItem Header="Copier MDP" 
                                                      Click="CopyPassword_Click"
                                                      Tag="{Binding}"/>
                                            <MenuItem Header="Copier URL" 
                                                      Click="CopyUrl_Click"
                                                      Tag="{Binding}"/>
                                            <Separator/>
                                            <MenuItem Header="Supprimer" 
                                                      Click="DeletePassword_Click"
                                                      Tag="{Binding}"/>
                                        </MenuFlyout>
                                    </Button.Flyout>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </StackPanel>
</Window>
