<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:YNOV_Password.ViewModels"
        mc:Ignorable="d"
        x:Class="YNOV_Password.Views.PasswordGeneratorWindow"
        x:DataType="vm:PasswordGeneratorViewModel"
        d:DataContext="{d:DesignInstance Type=vm:PasswordGeneratorViewModel}"
        Icon="/Assets/avalonia-logo.ico"
        Title="GÃ©nÃ©rateur de mot de passe"
        Classes="PasswordGeneratorWindow"
        CanResize="True"
        WindowStartupLocation="CenterOwner">

    <Window.Styles>
        <StyleInclude Source="avares://YNOV_Password/Styles/main.axaml"/>
    </Window.Styles>

    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24" Spacing="20">
            
            <!-- Titre -->
            <TextBlock Text="GÃ©nÃ©rateur de mot de passe"
                       Classes="SectionTitle"/>

            <!-- Mot de passe gÃ©nÃ©rÃ© -->
            <Border Classes="GeneratedPasswordContainer">
                <StackPanel Spacing="12">
                    <TextBlock Text="Mot de passe gÃ©nÃ©rÃ©" 
                               Classes="GeneratedPasswordLabel"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0"
                                 Text="{Binding GeneratedPassword}"
                                 IsReadOnly="True"
                                 Classes="PasswordInput"
                                 Margin="0,0,12,0"/>
                        
                        <TextBlock Grid.Column="1"
                                   Text="{Binding GeneratedPassword.Length, StringFormat='{}{0} car.'}"
                                   Classes="PasswordLength"/>
                        
                        <Button Grid.Column="2"
                                Content="ðŸ“‹"
                                ToolTip.Tip="Copier"
                                Click="CopyPassword_Click"
                                Classes="TableActionButton RoundActionButton"/>
                        
                        <Button Grid.Column="3"
                                Content="ðŸ”„"
                                ToolTip.Tip="GÃ©nÃ©rer un nouveau"
                                Command="{Binding GeneratePasswordCommand}"
                                Classes="TableActionButton RoundActionButton"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Mode de gÃ©nÃ©ration -->
            <Border Classes="SectionContainer">
                <StackPanel Spacing="16">
                    <TextBlock Text="Mode de gÃ©nÃ©ration" 
                               Classes="SectionLabel"/>
                    
                    <RadioButton GroupName="GenerationMode"
                                 IsChecked="{Binding !UseWordBased}"
                                 Content="GÃ©nÃ©ration par caractÃ¨res"
                                 Classes="GenerationMode"/>
                    
                    <RadioButton GroupName="GenerationMode"
                                 IsChecked="{Binding UseWordBased}"
                                 Content="GÃ©nÃ©ration basÃ©e sur des mots"
                                 Classes="GenerationMode"
                                 IsEnabled="{Binding HasWordsAvailable}"/>
                    
                    <Border IsVisible="{Binding !HasWordsAvailable}"
                            Classes="WarningMessage">
                        <TextBlock Text="âš ï¸ Aucune bibliothÃ¨que de mots n'est chargÃ©e. Utilisez le menu utilisateur pour importer une bibliothÃ¨que."
                                   Classes="WarningText"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Options de gÃ©nÃ©ration basÃ©e sur des mots -->
            <Border Classes="SectionContainer"
                    IsVisible="{Binding UseWordBased}">
                <StackPanel Spacing="20">
                    <TextBlock Text="Options de gÃ©nÃ©ration par mots" 
                               Classes="SectionLabel"/>

                    <!-- Nombre de mots -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Nombre de mots"
                                   Classes="FormLabel"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <Slider Grid.Column="0"
                                    Minimum="2"
                                    Maximum="8"
                                    Value="{Binding WordCount}"
                                    TickFrequency="1"
                                    IsSnapToTickEnabled="True"
                                    Classes="ParameterSlider"/>
                            <NumericUpDown Grid.Column="1"
                                           Value="{Binding WordCount}"
                                           Minimum="2"
                                           Maximum="8"
                                           Increment="1"
                                           Classes="FormNumeric"/>
                        </Grid>
                    </StackPanel>

                    <!-- SÃ©parateur -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="SÃ©parateur entre les mots"
                                   Classes="FormLabel"/>
                        <TextBox Text="{Binding WordSeparator}"
                                 MaxLength="3"
                                 Watermark="-"
                                 Classes="SmallInput"/>
                        <TextBlock Text="Exemples : - (tiret), _ (underscore), . (point)"
                                   Classes="HelpText"/>
                    </StackPanel>

                    <!-- Gestion des bibliothÃ¨ques -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="BibliothÃ¨ques de mots"
                                   Classes="FormLabel"/>
                        <TextBlock Foreground="#6B7280"
                                   Text="Cliquez pour gÃ©rer vos bibliothÃ¨ques de mots"
                                   Classes="HelpText"/>
                        <Button Content="ðŸ“š GÃ©rer les bibliothÃ¨ques"
                                Command="{Binding ManageLibrariesCommand}"
                                Classes="ManageButton"/>
                        <TextBlock Text="Importez un fichier texte contenant des mots (un par ligne)"
                                   Classes="HelpText"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Options de gÃ©nÃ©ration -->
            <Border Classes="SectionContainer"
                    IsVisible="{Binding !UseWordBased}">
                <StackPanel Spacing="20">
                    <TextBlock Text="Options de gÃ©nÃ©ration par caractÃ¨res" 
                               Classes="SectionLabel"/>

                    <!-- Longueur du mot de passe -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Longueur du mot de passe"
                                   Classes="FormLabel"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <Slider Grid.Column="0"
                                    Minimum="4"
                                    Maximum="64"
                                    Value="{Binding PasswordLength}"
                                    TickFrequency="1"
                                    IsSnapToTickEnabled="True"
                                    Classes="ParameterSlider"/>
                            <NumericUpDown Grid.Column="1"
                                           Value="{Binding PasswordLength}"
                                           Minimum="4"
                                           Maximum="64"
                                           Increment="1"
                                           Classes="FormNumeric"/>
                        </Grid>
                    </StackPanel>

                    <!-- Cases Ã  cocher pour les types de caractÃ¨res -->
                    <StackPanel Spacing="16">
                        <TextBlock Text="Types de caractÃ¨res Ã  inclure" 
                                   Classes="FormLabel"/>
                        
                        <StackPanel Spacing="12">
                            <CheckBox IsChecked="{Binding IncludeUppercase}"
                                      Content="Lettres majuscules (A-Z)"
                                      Classes="FormCheckBox"/>
                            
                            <CheckBox IsChecked="{Binding IncludeLowercase}"
                                      Content="Lettres minuscules (a-z)"
                                      Classes="FormCheckBox"/>
                            
                            <CheckBox IsChecked="{Binding IncludeNumbers}"
                                      Content="Chiffres (0-9)"
                                      Classes="FormCheckBox"/>
                            
                            <CheckBox IsChecked="{Binding IncludeSpecialChars}"
                                      Content="CaractÃ¨res spÃ©ciaux"
                                      Classes="FormCheckBox"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- CaractÃ¨res spÃ©ciaux personnalisÃ©s -->
                    <StackPanel Spacing="8" 
                                IsVisible="{Binding IncludeSpecialChars}">
                        <TextBlock Text="CaractÃ¨res spÃ©ciaux personnalisÃ©s"
                                   Classes="FormLabel"/>
                        <TextBox Text="{Binding CustomSpecialChars}"
                                 Watermark="Entrez les caractÃ¨res spÃ©ciaux souhaitÃ©s"
                                 Classes="PasswordInput"/>
                        <TextBlock Text="Exemples : !@#$%^&amp;*()_+-=[]{}|;:,.&lt;&gt;?"
                                   Classes="HelpText"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Force du mot de passe -->
            <Border Classes="SectionContainer">
                <StackPanel Spacing="12">
                    <TextBlock Text="Force du mot de passe" 
                               Classes="SectionLabel"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <ProgressBar Grid.Column="0"
                                     Name="PasswordStrengthBar"
                                     Classes="PasswordStrengthBar"/>
                        
                        <TextBlock Grid.Column="1"
                                   Name="PasswordStrengthText"
                                   Classes="PasswordStrengthText"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Boutons d'action -->
            <Grid Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="1"
                        Content="Utiliser ce mot de passe"
                        Click="UsePassword_Click"
                        Classes="UsePasswordButton"
                        Margin="0,0,12,0"/>
                
                <Button Grid.Column="2"
                        Content="Annuler"
                        Click="Cancel_Click"
                        Classes="CancelButton"/>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Window>
