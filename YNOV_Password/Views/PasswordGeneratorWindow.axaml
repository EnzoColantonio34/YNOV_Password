<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:YNOV_Password.ViewModels"
        mc:Ignorable="d"
        x:Class="YNOV_Password.Views.PasswordGeneratorWindow"
        x:DataType="vm:PasswordGeneratorViewModel"
        d:DataContext="{d:DesignInstance Type=vm:PasswordGeneratorViewModel}"
        Icon="/Assets/avalonia-logo.ico"
        Title="Générateur de mot de passe"
        Width="500"
        Height="700"
        CanResize="True"
        WindowStartupLocation="CenterOwner">

    <Window.Styles>
        <StyleInclude Source="avares://YNOV_Password/Styles/main.axaml"/>
    </Window.Styles>

    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24" Spacing="20">
            
            <!-- Titre -->
            <TextBlock Text="Générateur de mot de passe"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#1F2937"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,8"/>

            <!-- Mot de passe généré -->
            <Border BorderBrush="#E5E7EB" 
                    BorderThickness="1" 
                    CornerRadius="12" 
                    Padding="20"
                    Background="White"
                    BoxShadow="0 1 3 0 #1F29371A">
                <StackPanel Spacing="12">
                    <TextBlock Text="Mot de passe généré" 
                               FontWeight="SemiBold"
                               FontSize="14"
                               Foreground="#374151"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0"
                                 Text="{Binding GeneratedPassword}"
                                 IsReadOnly="True"
                                 Classes="PasswordInput"
                                 FontSize="14"
                                 Margin="0,0,12,0"/>
                        
                        <TextBlock Grid.Column="1"
                                   Text="{Binding GeneratedPassword.Length, StringFormat='{}{0} car.'}"
                                   VerticalAlignment="Center"
                                   FontSize="12"
                                   Foreground="#6B7280"
                                   FontWeight="Medium"
                                   Margin="0,0,12,0"/>
                        
                        <Button Grid.Column="2"
                                Content="📋"
                                ToolTip.Tip="Copier"
                                Click="CopyPassword_Click"
                                Classes="TableActionButton"
                                Margin="0,0,6,0"
                                Width="40"
                                Height="40"
                                CornerRadius="8"/>
                        
                        <Button Grid.Column="3"
                                Content="🔄"
                                ToolTip.Tip="Générer un nouveau"
                                Command="{Binding GeneratePasswordCommand}"
                                Classes="TableActionButton"
                                Width="40"
                                Height="40"
                                CornerRadius="8"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Mode de génération -->
            <Border BorderBrush="#E5E7EB" 
                    BorderThickness="1" 
                    CornerRadius="12" 
                    Padding="20"
                    Background="White"
                    BoxShadow="0 1 3 0 #1F29371A">
                <StackPanel Spacing="16">
                    <TextBlock Text="Mode de génération" 
                               FontWeight="SemiBold"
                               FontSize="16"
                               Foreground="#1F2937"/>
                    
                    <RadioButton GroupName="GenerationMode"
                                 IsChecked="{Binding !UseWordBased}"
                                 Content="Génération par caractères"
                                 FontWeight="Medium"
                                 Foreground="#374151"/>
                    
                    <RadioButton GroupName="GenerationMode"
                                 IsChecked="{Binding UseWordBased}"
                                 Content="Génération basée sur des mots"
                                 FontWeight="Medium"
                                 Foreground="#374151"
                                 IsEnabled="{Binding HasWordsAvailable}"/>
                    
                    <Border IsVisible="{Binding !HasWordsAvailable}"
                            Padding="12"
                            Background="#FEF2F2"
                            BorderBrush="#FECACA"
                            BorderThickness="1"
                            CornerRadius="6">
                        <TextBlock Text="⚠️ Aucune bibliothèque de mots n'est chargée. Utilisez le menu utilisateur pour importer une bibliothèque."
                                   FontSize="12"
                                   Foreground="#DC2626"
                                   TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Options de génération basée sur des mots -->
            <Border BorderBrush="#E5E7EB" 
                    BorderThickness="1" 
                    CornerRadius="12" 
                    Padding="20"
                    Background="White"
                    BoxShadow="0 1 3 0 #1F29371A"
                    IsVisible="{Binding UseWordBased}">
                <StackPanel Spacing="20">
                    <TextBlock Text="Options de génération par mots" 
                               FontWeight="SemiBold"
                               FontSize="16"
                               Foreground="#1F2937"/>

                    <!-- Nombre de mots -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Nombre de mots"
                                   FontWeight="Medium"
                                   Foreground="#374151"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <Slider Grid.Column="0"
                                    Minimum="2"
                                    Maximum="8"
                                    Value="{Binding WordCount}"
                                    TickFrequency="1"
                                    IsSnapToTickEnabled="True"
                                    Margin="0,0,16,0"/>
                            <NumericUpDown Grid.Column="1"
                                           Value="{Binding WordCount}"
                                           Minimum="2"
                                           Maximum="8"
                                           Increment="1"
                                           ShowButtonSpinner="True"
                                           CornerRadius="6"/>
                        </Grid>
                    </StackPanel>

                    <!-- Séparateur -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Séparateur entre les mots"
                                   FontWeight="Medium"
                                   Foreground="#374151"/>
                        <TextBox Text="{Binding WordSeparator}"
                                 MaxLength="3"
                                 Width="120"
                                 HorizontalAlignment="Left"
                                 Watermark="-"
                                 CornerRadius="6"
                                 Padding="10,8"/>
                        <TextBlock Text="Exemples : - (tiret), _ (underscore), . (point)"
                                   FontSize="12"
                                   Foreground="#6B7280"/>
                    </StackPanel>

                    <!-- Gestion des bibliothèques -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Bibliothèques de mots"
                                   FontWeight="Medium"
                                   Foreground="#374151"/>
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Foreground="#6B7280"
                                       Text="Cliquez pour gérer vos bibliothèques de mots"/>
                            <Button Grid.Column="1"
                                    Content="📚 Gérer les bibliothèques"
                                    Command="{Binding ManageLibrariesCommand}"
                                    CornerRadius="6"
                                    Padding="12,8"
                                    FontSize="12"/>
                        </Grid>
                        <TextBlock Text="Importez un fichier texte contenant des mots (un par ligne)"
                                   FontSize="12"
                                   Foreground="#6B7280"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Options de génération -->
            <Border BorderBrush="#E5E7EB" 
                    BorderThickness="1" 
                    CornerRadius="12" 
                    Padding="20"
                    Background="White"
                    BoxShadow="0 1 3 0 #1F29371A"
                    IsVisible="{Binding !UseWordBased}">
                <StackPanel Spacing="20">
                    <TextBlock Text="Options de génération par caractères" 
                               FontWeight="SemiBold"
                               FontSize="16"
                               Foreground="#1F2937"/>

                    <!-- Longueur du mot de passe -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Longueur du mot de passe"
                                   FontWeight="Medium"
                                   Foreground="#374151"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <Slider Grid.Column="0"
                                    Minimum="4"
                                    Maximum="64"
                                    Value="{Binding PasswordLength}"
                                    TickFrequency="1"
                                    IsSnapToTickEnabled="True"
                                    Margin="0,0,16,0"/>
                            <NumericUpDown Grid.Column="1"
                                           Value="{Binding PasswordLength}"
                                           Minimum="4"
                                           Maximum="64"
                                           Increment="1"
                                           ShowButtonSpinner="True"
                                           CornerRadius="6"/>
                        </Grid>
                    </StackPanel>

                    <!-- Cases à cocher pour les types de caractères -->
                    <StackPanel Spacing="16">
                        <TextBlock Text="Types de caractères à inclure" 
                                   FontWeight="Medium"
                                   Foreground="#374151"/>
                        
                        <StackPanel Spacing="12">
                            <CheckBox IsChecked="{Binding IncludeUppercase}"
                                      Content="Lettres majuscules (A-Z)"
                                      Foreground="#374151"/>
                            
                            <CheckBox IsChecked="{Binding IncludeLowercase}"
                                      Content="Lettres minuscules (a-z)"
                                      Foreground="#374151"/>
                            
                            <CheckBox IsChecked="{Binding IncludeNumbers}"
                                      Content="Chiffres (0-9)"
                                      Foreground="#374151"/>
                            
                            <CheckBox IsChecked="{Binding IncludeSpecialChars}"
                                      Content="Caractères spéciaux"
                                      Foreground="#374151"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Caractères spéciaux personnalisés -->
                    <StackPanel Spacing="8" 
                                IsVisible="{Binding IncludeSpecialChars}">
                        <TextBlock Text="Caractères spéciaux personnalisés"
                                   FontWeight="Medium"
                                   Foreground="#374151"/>
                        <TextBox Text="{Binding CustomSpecialChars}"
                                 Watermark="Entrez les caractères spéciaux souhaités"
                                 Classes="PasswordInput"/>
                        <TextBlock Text="Exemples : !@#$%^&amp;*()_+-=[]{}|;:,.&lt;&gt;?"
                                   FontSize="12"
                                   Foreground="#6B7280"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Force du mot de passe -->
            <Border BorderBrush="#E5E7EB" 
                    BorderThickness="1" 
                    CornerRadius="12" 
                    Padding="20"
                    Background="White"
                    BoxShadow="0 1 3 0 #1F29371A">
                <StackPanel Spacing="12">
                    <TextBlock Text="Force du mot de passe" 
                               FontWeight="SemiBold"
                               FontSize="16"
                               Foreground="#1F2937"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <ProgressBar Grid.Column="0"
                                     Name="PasswordStrengthBar"
                                     Height="12"
                                     CornerRadius="6"
                                     Margin="0,0,16,0"/>
                        
                        <TextBlock Grid.Column="1"
                                   Name="PasswordStrengthText"
                                   FontWeight="SemiBold"
                                   FontSize="14"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Boutons d'action -->
            <Grid Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="1"
                        Content="Utiliser ce mot de passe"
                        Click="UsePassword_Click"
                        Padding="20,12"
                        Margin="0,0,12,0"
                        CornerRadius="8"
                        FontWeight="Medium"/>
                
                <Button Grid.Column="2"
                        Content="Annuler"
                        Click="Cancel_Click"
                        Padding="20,12"
                        Background="Transparent"
                        Foreground="#6B7280"
                        BorderBrush="#D1D5DB"
                        BorderThickness="1"
                        CornerRadius="8"
                        FontWeight="Medium"/>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Window>
