<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:YNOV_Password.ViewModels"
        mc:Ignorable="d"
        x:Class="YNOV_Password.Views.AddPasswordView"
        x:DataType="vm:AddPasswordViewModel">

    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="24">
            <TextBlock Text="Ajouter un nouveau mot de passe" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="#1F2937"
                       Margin="0,0,0,24"/>

            <StackPanel Spacing="20">
                <!-- Site -->
                <StackPanel>
                    <TextBlock Text="Site" 
                               FontWeight="Medium"
                               Foreground="#374151"
                               Margin="0,0,0,6"/>
                    <TextBox Text="{Binding Site}" 
                             Watermark="Nom du site ou service"
                             CornerRadius="8"
                             Padding="12,10"
                             BorderBrush="#D1D5DB"
                             BorderThickness="1"/>
                </StackPanel>

                <!-- Nom d'utilisateur -->
                <StackPanel>
                    <TextBlock Text="Nom d'utilisateur" 
                               FontWeight="Medium"
                               Foreground="#374151"
                               Margin="0,0,0,6"/>
                    <TextBox Text="{Binding Username}" 
                             Watermark="Votre nom d'utilisateur"
                             CornerRadius="8"
                             Padding="12,10"
                             BorderBrush="#D1D5DB"
                             BorderThickness="1"/>
                </StackPanel>

                <!-- Mot de passe -->
                <StackPanel>
                    <TextBlock Text="Mot de passe" 
                               FontWeight="Medium"
                               Foreground="#374151"
                               Margin="0,0,0,6"/>
                    <TextBox Classes="PasswordInput"
                             Text="{Binding Password}" 
                             PasswordChar="*" 
                             Watermark="Mot de passe sécurisé"/>
                </StackPanel>

                <!-- URL -->
                <StackPanel>
                    <TextBlock Text="URL" 
                               FontWeight="Medium"
                               Foreground="#374151"
                               Margin="0,0,0,6"/>
                    <TextBox Text="{Binding Url}" 
                             Watermark="https://example.com"
                             CornerRadius="8"
                             Padding="12,10"
                             BorderBrush="#D1D5DB"
                             BorderThickness="1"/>
                </StackPanel>
            </StackPanel>

            <!-- Boutons -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,32,0,0"
                        Spacing="12">
                <Button Content="Annuler" 
                        Click="CancelButton_Click"
                        Background="Transparent"
                        Foreground="#6B7280"
                        BorderBrush="#D1D5DB"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20,10"
                        FontWeight="Medium"/>
                <Button Content="Enregistrer" 
                        Click="SaveButton_Click"
                        CornerRadius="8"
                        Padding="20,10"
                        FontWeight="Medium"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
